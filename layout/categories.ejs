<div class="wrapper">
    <header class="header">
      <h1 class="header-title center"><%=page.title%></h1>
    </header>
    
      <main class="page-content" aria-label="Content">
      
        <div class="categories-grid">
            <% site.categories.forEach(function(category) { %>
              <div class="category-item glass-wrapper card-item hover-effect">
                <a href="<%= url_for(category.path) %>">
                  <%= category.name %> (<%= category.length %>)
                </a>
              </div>
            <% }); %>
          </div>
         
     
      </main>
      
  </div>
  